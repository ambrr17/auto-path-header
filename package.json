{
  "name": "auto-path-header",
  "displayName": "Auto Path Header",
  "description": "Automatically inserts the relative path of the file as a comment on the first line.",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {},
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^24.0.4",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.0.0",
    "vsce": "^2.14.0"
  }
}
