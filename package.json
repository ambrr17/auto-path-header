{
  "name": "auto-path-header",
  "displayName": "Auto Path Header",
  "description": "Automatically inserts the relative path of the file as a comment on the first line.",
  "version": "0.0.2",
  "author": "Niklis",
  "repository": {
    "type": "git",
    "url": "https://github.com/ambrr17/auto-path-header.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:autoPathHeader.insertComment",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:java",
    "onLanguage:c",
    "onLanguage:cpp",
    "onLanguage:csharp",
    "onLanguage:go",
    "onLanguage:rust",
    "onLanguage:swift",
    "onLanguage:kotlin",
    "onLanguage:php",
    "onLanguage:python",
    "onLanguage:shellscript",
    "onLanguage:ruby",
    "onLanguage:perl",
    "onLanguage:dotenv",
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:sass",
    "onLanguage:sql",
    "onLanguage:html",
    "onLanguage:xml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "autoPathHeader.insertComment",
        "title": "Insert Path Comment",
        "category": "Auto Path Header"
      }
    ],
    "configuration": {
      "title": "Auto Path Header",
      "properties": {
        "autoPathHeader.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable automatic comment insertion"
        },
        "autoPathHeader.language": {
          "type": "string",
          "enum": ["auto", "en", "ru"],
          "default": "auto",
          "description": "Language for extension messages (auto = system language)"
        },
        "autoPathHeader.updateOnRename": {
          "type": "boolean",
          "default": true,
          "description": "Automatically update path comment when file is renamed or moved"
        },
        "autoPathHeader.askBeforeUpdate": {
          "type": "boolean",
          "default": false,
          "description": "Ask for confirmation before updating path comment (only works when updateOnRename is true)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "test": "mocha --ui tdd \"dist/test/**/*.test.js\"",
    "test:it": "node ./dist/it/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^24.0.4",
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.0",
    "@types/glob": "^8.0.0",
    "@vscode/test-electron": "^2.3.0",
    "typescript": "^5.0.0",
    "vsce": "^2.14.0",
    "mocha": "^10.0.0",
    "glob": "^10.0.0"
  }
}
